{
    "name": "matmper/php-discord-webhook",
    "description": "Sample and cleand package to send messages to your discord channel",
    "version": "1.0.2",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.1|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "authors": [
        {
            "name": "github.com/matmper",
            "email": "contato@matheusp.com.br"
        }
    ],
    "autoload": {
        "classmap": [
            "src/"
        ],
        "psr-4": {
            "Matmper\\": "src/"
        }
    },
    "scripts": {
        "check": [
            "@test",
            "@cs"
        ],
        "test": "vendor/bin/phpunit  -d memory_limit=256M --configuration phpunit.xml",
        "cs": "vendor/bin/phpcs"
    }
}
